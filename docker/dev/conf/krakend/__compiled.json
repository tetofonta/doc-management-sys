}
    }
},
{
    "endpoint": "/api/local-users/",
    "method": "POST",
    "backend": [{
        "url_pattern": "/api/user/",
        "method": "POST",
        "host": [ "http://api-basic-auth-dev:7101" ]
    }],
    "input_headers": ["Authorization", "Content-Length", "Content-Type"],
    "extra_config": {
        "auth/validator": {
    "alg": "ES384",
    "audience": ["dms"],
    "roles_key": "features",
    "disable_jwk_security": true,
    "cache": true,
    "jwk_url": "http://10.128.0.109:7100/api/.well-known/jwks.json",
    "roles": ["__superuser__","localuser,","localuser:admin,","localuser:admin:create"],
    "operation_debug": true
}
    }
},
{
    "endpoint": "/api/local-users/{id}/local-groups/",
    "method": "GET",
